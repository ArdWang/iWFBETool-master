<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--login main style-->
    <style name="login_main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--login layout-->
    <style name="login_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/magin_20</item>
        <item name="android:paddingLeft">@dimen/padding_0</item>
        <item name="android:paddingRight">@dimen/padding_0</item>
    </style>
    <!--login button-->
    <style name="login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_button</item>
        <item name="android:textSize">@dimen/login_textsize</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">@string/login_button</item>
    </style>

    <style name="res_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textSize">@dimen/login_textsize</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">@string/res_button</item>
    </style>

    <!-- rl normal style-->
    <style name="rl_normal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--login_layout_1-->
    <style name="login_layout_three_one">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--login_layout_2-->
    <style name="login_layout_three_two">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:paddingTop">@dimen/dp_20</item>
        <item name="android:paddingLeft">@dimen/dp_50</item>
        <item name="android:paddingRight">@dimen/dp_50</item>
        <item name="android:paddingBottom">@dimen/dp_20</item>
        <item name="android:layout_height">@dimen/zero_dp</item>
    </style>

    <!--login_user_layout-->
    <style name="login_edittext_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_layout_bg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--login_edittext_style-->
    <style name="login_edittext_style">
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <!--login_forget_layout-->
    <style name="login_forget_layout">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_40</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--login_join_us-->
    <style name="layout_login_join_us">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--normal style-->
    <style name="warp_normal_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_normal_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>



    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 自定义Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="A2_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
